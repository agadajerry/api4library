    <link rel="icon" type="image/x-icon" href="http://www.jerrysofttechy.com/images/jerry.jpg">
    </head>
  <body>
    <!-- vertical menu -->

   <%- include('sidebar')%>

    <!-- Page Content  -->
    <div id="content" class="p-4  pt-5 page-content">
      <div class="custom-menu">
        <button
          type="button"
          id="sidebarCollapse"
          class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"
        >
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <!--  -->
      <div class="container-fluid">
        <section class="container-fluid" id="image-container">
            
            <img src="https://gifimage.net/wp-content/uploads/2018/11/turn-page-gif-1.gif" alt="" id="showcase">
            <p> WELCOME TO YOUR DASHBOARD  <strong id="myname" style="font-family: cursive; font-size: 16px; text-decoration: underline;">d</strong>  <br> <small style="color:rgb(161, 111, 18); font-family: cursive;">Pick Up A Book And Study &dArr;</small> <quote> Reading maketh a man</quote> </p>
          </section>
          <h2 class="text-center" style="font-size: 30px;">&darr;</h2>
          <!-- content body go here -->

          <section class="container mt-4 mb-5" style="border:1px solid teal">
              <h3 class=" text-center mb-4 mt-5" style="font-family: cursive; font-size: 34px;color: orange;font-weight: bolder; letter-spacing: 7px;">Books Of Knowledge</h3>
              
              <div class="row mt-5">
              </div>
          </section>
      <!-- show case area end here. -->

      <!-- book section -->
      <section class="container  mb-5 mt-5">
          <div class ="row">
            <% if(displayBooks.length===0){ %>
              <h3 class="text-center" style="color:teal; font-size:23">The Library is emptyðŸ¥…</h3>
              <%}%>
            <% displayBooks.forEach(function( books ){ %>
              <div class="col-md-3">
                <div class="card text-center">
                    <div class="bg-image hover-overlay ripple text-center" data-mdb-ripple-color="light">
                      <img
                        src="<%= books.imageUrl%>"
                        class="img-fluid" style="width: 200px;height: 200px;"/>
                      
                      <a href="book/<%= books.bookId%>">
                        <div class="mask" style="background-color: rgba(214, 33, 33, 0.15);"></div>
                      </a>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"> <%= books.title %></h5>
                    </div>
                  </div>
              </div>
              <% }) %>
              
          </div>

      </section>


      <!-- book section end -->

      <!-- footer section, -->
        <!-- Footer -->
        <footer class="text-center text-white" style="background-color: #0a4275;">
          <!-- Grid container -->
          <div class="container p-4 pb-0">
            <!-- Section: CTA -->
            <section class="">
              <p class="d-flex justify-content-center align-items-center">
                <span class="me-3">Home of Knowledge</span>
                <button type="button" class="btn btn-outline-light btn-rounded">
                  View More
                </button>
              </p>
            </section>
            <!-- Section: CTA -->
          </div>
          <!-- Grid container -->
      
          <!-- Copyright -->
          <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            Â© 2021 Copyright:
            <a class="text-white" href="http://jerrysofttechy.com/">jerrysofttechy.com</a>
          </div>
          <!-- Copyright -->

        </footer>
        <!-- Footer -->

      </div>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.0/umd/popper.min.js" ></script>
    <script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script> 
    <!-- toggle file-->
    <script src ="script/toggle.js"></script>
