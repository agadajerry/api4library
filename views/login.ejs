<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Library API Website</title>
        <meta charset="utf-8" />
        <meta
          name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        rel="stylesheet"
      />
      <!-- Google Fonts -->
      <link
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
        rel="stylesheet"
      />
      </head>


 <body style ="background:#ccc">
  <div class="container" style="margin-top: 100px;">
  
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
            <h1 class ="text-center mt-3 mb-5" style="font-family: poppins; font-size: 33px;">Welcome To Your E-Library</h1>
              <div class ="card">
                <div class="card-body"> 
              <% if(message.length>0){%>
                <p class="alert alert-danger" style="
                font-family: cursive; font-size: 30px;"><%= message %> </p>
                <%}%>
                <h3 class="text-center mb-5 mt-3" style="color:teal; 
                font-family: cursive; font-size: 30px;">Login To Your Dashboard</h3>
                
                <form method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="email">Email Name</label>
                      <input type="email" id="email" value="" class="form-control" name= "email" />
                    </div>
                  
                    <!-- Password input -->
                    <div class="form-outline mb-4"> 
                    <label class="form-label" for="password">Password</label>
                      <input type="password" id="password" class="form-control" name="password" />
                    </div>
                  
                    
                    <!-- Submit button -->
                    <button type="submit" onclick="retainVal()" class="btn btn-primary mb-3">Sign in</button>

                     

                     <div class="row mb-4">
                      
                      <div class="col">
                        <a href="/register">No account yet?</a>
                      </div>
                    </div>
                    
                  </form>
            </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>



<script>

  document.getElementById("email").value = localStorage.getItem("email");

  function retainVal(){
    let email  = document.getElementById("email").value;

    localStorage.setItem("email",email);
    location.reload();
  }
  </script>
</body>
</html>
