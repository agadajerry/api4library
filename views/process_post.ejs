<html lang="en">
  <head>
    <title>Library API Website</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
<body>
    
    <!-- nav bar start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-4">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-mdb-toggle="collapse"
            data-mdb-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <i class="fas fa-bars"></i>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="#">Library</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/allbooks">View All Books</a>
              </li>
            </ul>
            <form class="d-flex input-group w-auto">
              <input
                type="search"
                class="form-control"
                placeholder="Search book"
                aria-label="Search"
              />
              <button
                class="btn btn-outline-primary"
                type="button"
                data-mdb-ripple-color="dark"
              >
                Search
              </button>
            </form>
          </div>
        </div>
      </nav>
      <!-- nav bar end. -->

        <div class= "container mt-5">
            <div class ="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
              <div class="container mb-5">
                <h3 class="text-center" style="font-size: 30px; color:teal">Post New Book</h3>
              </div>
          <form method="POST" id="form"  action="">
            <!-- Name input -->
            <div class="form-outline mb-4">
                <input type="text" id="title" class="form-control" name="title" />
                <label class="form-label" for="title">Book Title</label>
            </div>

            <!--Varieties of books-->
            <div class="row mb-4">
                <div class="col">
                  <div class="form-outline">
                    <input type="text" id="author" class="form-control"  name="author"/>
                    <label class="form-label" for="author">Author's Name</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <input type="number" id="pagenumber" class="form-control" name="pagenumber"/>
                    <label class="form-label" for="pagenumber">Page Number</label>
                  </div>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <div class="form-outline">
                    <input type="text" id="genre" class="form-control"  name="genre"/>
                    <label class="form-label" for="genre">Genre</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <input type="text" id="publisher" class="form-control"  name="publisher"/>
                    <label class="form-label" for="publisher">Publisher</label>
                  </div>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <div class="form-outline">
                    <input type="date" id="datepublish" name="datepublish" class="form-control" />
                    <label class="form-label" for="datepublish">Date</label>
                  </div>
                </div>
                </div>

            <!-- Message input -->
            <div class="form-outline mb-4">
                <textarea class="form-control" id="description" rows="4" name="description"></textarea>
                <label class="form-label" for="description">Description</label>
            </div>
            <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4" id="submitbtn"
         style="width: 100%;">Add New Book</button>
            </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
   
  

      <!-- footer section, -->

        <!-- Footer -->
        <footer class="text-center text-white mt-5" style="background-color: #0a4275;">
