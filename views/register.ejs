<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Library API Website</title>
        <meta charset="utf-8" />
        <meta
          name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        rel="stylesheet"
      />
      <!-- Google Fonts -->
      <link
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
        rel="stylesheet"
      />
      </head>
<body style="background: #ccc;">
    
    <div class="container" style="margin-top: 100px;">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

              <div class="card">
                <div class="card-body">
                  <% if(message.length>0){%>
                    <p class="alert alert-danger"
                    style=" 
                font-family: cursive; font-size: 30px;"><%= message %> </p>
                    <%}%>
                    <% if(messageerror.length>0){%>
                      <p class="alert alert-danger"
                      style=" font-family: cursive; font-size: 30px;;"><%= messageerror %> </p>
                      <%}%>
    
                    
                    <h3 class="text-center mb-5 mt-3"
                    style="color:teal; 
                font-family: cursive; font-size: 30px;">New Library User Account</h3>
                    <form method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="fullname">Full Name</label>
                          <input type="text" id="fullname" value="" class="form-control"Full name="fullname" />
                        </div>
                        <div class="form-outline mb-4">
                          <label class="form-label" for="email">Email</label>
                        <input type="email" id="email" value="" class="form-control" name="email" required />
                      </div>

                      <div class="form-outline mb-4">
                        <label class="form-label" for="dateofbirth">Data Of Birth</label>
                      <input type="date" id="dataOfBirth" class="form-control" name="dateofbirth" required />
                    </div>
                      
                        <!-- Password input -->
                        <div class="form-outline mb-4"> 
                        <label class="form-label" for="password">Password</label>
                          <input type="password" id="password" class="form-control" name="password" />
                        </div>

                        <!--repeat password-->
                        <div class="form-outline mb-4"> 
                          <label class="form-label" for="rep_password">Repeat Password</label>
                            <input type="password" id="rep_password" class="form-control" name ="rep_password" />
                            <% if(password_miss.length>0){%>
                            <p class=" alert alert-danger"><%= password_miss %></p>
                            <%}%>
                          </div>
                      
                      
                        <!-- Submit button -->
                        <button type="submit" onclick="retainData()" class="btn btn-primary mb-3">Sign up</button>

                        <div class="row mb-4">
                      
                          <div class="col">
                            <!-- Simple link -->
                            <a href="/">Already have account?</a>
                          </div>
                        </div>
                      </form>
                </div>
              </div>

              
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <script>
      document.getElementById("fullname").value =  localStorage.getItem("fullname");
      document.getElementById("email").value =  localStorage.getItem("reg_email");

      function retainData(){
        let fullname = document.getElementById("fullname").value;

        let regEmail = document.getElementById("email").value;

        localStorage.setItem("reg_email", regEmail);
        localStorage.setItem("fullname", fullname);

        location.reload;
      }



    </script>
    
</body>
</html>